{
    "version": 2,
    "builds": [
      { "src": "client/package.json", "use": "@vercel/next" },
      { "src": "server/package.json", "use": "@vercel/node" }
    ],
    "routes": [
    {
      "src": "^/api/(.*)", 
      "dest": "server/$1.js"
    },
    {
      "src": "/(.*)", 
      "dest": "client/$1"
    }
  ]
  }
  